/* pages/goper/goper.wxss */
page{
  background:#fff;
}
.mod_intro {
    position: relative;
    margin-top: 84rpx;
    margin-left: 28rpx;
    margin-right: 28rpx;
    border-radius: 20rpx;
}
.mod_intro textarea {
    width:auto;
    padding: 42rpx 26rpx;
    background: #f7f8fa;
    border: none;
    height:200rpx;
    font-size: 30rpx;
    border-radius: 20rpx;
}
.mod_num {
    position: absolute;
    right: 30rpx;
    bottom: 20rpx;
    width: 144rpx;
    height: 38rpx;
    float: right;
}
.n_go_buy {
    width: 100%;
    height: 160rpx;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 3;
}
.n_go_buy_href {
    margin-top:40rpx;
    width: 654rpx;
    height: 100rpx;
    background: -webkit-linear-gradient(30deg, #ed3367, #f05e3f);
    box-shadow: 0 7px 14px rgba(0,0,0,0.2);
    border-radius: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color:#fff;
    font-size:32rpx;
}