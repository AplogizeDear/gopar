/* pages/proback/proback.wxss */
page{
  background:#fff;
}
.active-detail-title{
  margin:0;
  margin-top:54rpx;
  padding-left:40rpx;
  margin-bottom:68rpx;
  font-size: 32rpx;
  font-weight: 700;
  color: #554b4b;
}
.all_problem{
  overflow: hidden;
}
.problem_list {
    margin: 0 0 0 5%;
    padding: 0;
    width: 680rpx;
    height: auto;
    overflow: hidden;
}
.problem_list .liview {
    position: relative;
    padding-left: 24rpx;
    padding-right: 24rpx;
    float: left;
    height: 64rpx;
    line-height: 64rpx;
    background: #f7f8fa;
    margin-bottom: 42rpx;
    margin-right: 40rpx;
    border-radius: 40rpx;
}
.problem_list .active_pro {
    background: #ed3269;
    color: #fff;
}
#phone_class {
    width: 90%;
    margin: 0 5%;
    background: #f3f3f3;
    border: none;
    outline: none;
    font-size: 26rpx;
    padding: 30rpx 0 30rpx 24rpx;
    border-radius: 20rpx;
}
.mod_intro {
    position: relative;
    margin-top: 200rpx;
    margin-left: 28rpx;
    margin-right: 28rpx;
    border-radius: 20rpx;
}
.mod_intro textarea {
    width:auto;
    padding: 42rpx 26rpx;
    background: #f7f8fa;
    border: none;
    height:200rpx;
    font-size: 30rpx;
    border-radius: 20rpx;
}
.mod_num {
    position: absolute;
    right: 30rpx;
    bottom: 20rpx;
    width: 144rpx;
    height: 38rpx;
    float: right;
}
.put_img_con{
  overflow: hidden;
  margin-bottom: 250rpx;
  position: relative;
}
.img_put {
    width: 120rpx;
    height: 120rpx;
    border: 2rpx solid #eee;
    margin-left: 5%;
    margin-top: 40rpx;
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
}
.img_put image {
    width: 100%;
    height: 100%;
}
.upload-img-btn{
  width: 124rpx;
  height: 124rpx;
  position: absolute;
  left: 5%;
  margin-top: 5%;
}
.polist{
  overflow: hidden;
  width:180rpx;
  height:180rpx;
  background:pink;
  float:right;
  position: relative;
  border-radius: 50%;
}
.img{
  overflow: hidden;
  width:180rpx;
  height:180rpx;
  float: right;
  position: absolute;
  top:0;
  left:0;
}
.img image{
  width:180rpx;
  height:180rpx;
  border-radius: 50%;
  float: right;
  position: absolute;
  top:0;
  right:0;
}
.upload-img-btn{
  width:180rpx;
  height:180rpx;
  position: absolute;
  left:0;top:0;
}
.n_go_buy {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 160rpx;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 3;
    box-shadow:0rpx 10rpx 30rpx 0rpx rgba(0,0,0,0.2);
}
.n_go_buy_href {
    width: 654rpx;
    height: 100rpx;
    background: -webkit-linear-gradient(30deg, #ed3367, #f05e3f);
    box-shadow: 0 7px 14px rgba(0,0,0,0.2);
    border-radius: 50rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color:#fff;
}