
.all_con{
  padding-bottom:100rpx;
}
.n_use_cou_list_has{
  overflow: hidden;
  margin-top:0;
}
.n_use_cou_list_has:nth-of-type(1){
  overflow: hidden;
  margin-top:100rpx;
}
.use_cou_list_has {
    width: 724rpx;
    height: 252rpx;
    margin-left:13rpx;
    position: relative;
}
.use_cou_list_has image{
  width:724rpx;
  height:252rpx;
  position: absolute;
  left:0;top:0;
}
.use_cou_list_has .n_use_left{
    position: absolute;
    left:0;
    top:0; 
    width: 410rpx;
    height: 160rpx;
    margin-left: 16rpx;
    float: left;
    padding: 24rpx 44rpx; 
}
.n_use_right{
    position: absolute;
    right:20rpx;
    top:15rpx;
    width: 188rpx;
    height: 178rpx;
}
.n_co_type {
    margin-top: 34rpx;
    text-align: center;
    font-size: 44rpx;
    font-weight: 700;
    color: #fff;
}
.price_type {
    margin-top: 10rpx;
    text-align: center;
    font-weight: 700;
    color: #fff;
    font-size: 30rpx;
}
.use_coupon_title {
    color: #333;
    font-weight: 700;
    margin-bottom: 30rpx;
    overflow: hidden;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    font-size:38rpx;
}
.footer_get_coupon {
    position: fixed;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 120rpx;
    background: #fff;
    box-shadow: 0 -2rpx 60rpx rgba(0,0,0,0.2);
}
#get_coupon_view {
    width: 100%;
    height: 100%;
}
#get_coupon_view .join_code {
    width: 55%;
    height: 100%;
    float: left;
    display: flex;
    justify-content: center;
    align-items: center;
}
#get_coupon_view .join_code input {
    height: 80rpx;
    padding-left: 30rpx;
    font-size: 1.1em;
    border: none;
    outline: none;
    color: #9c9c9c;
}
#get_coupon_view .active_button {
    width: 45%;
    height: 100%;
    float: right;
    display: flex;
    justify-content: center;
    align-items: center;
}
.active_button .change_coupon {
    width: 240rpx;
    height: 75rpx;
    line-height: 75rpx;
    background: -webkit-linear-gradient(30deg, #ed3367, #f05e3f);
    color: #fff;
    text-align: center;
    border-radius: 60rpx;
    font-weight: 700;
    letter-spacing: 2rpx;
    box-shadow: 0 14rpx 30rpx #d6acb8;
}