/* pages/search/search.wxss */
page{
  background:#fff;
}
.header{
  overflow: hidden;
  margin-bottom:78rpx;
  box-shadow: 0 0 0.9rem rgba(0,0,0,0.2);
}
.top-bar-w{
  color: #212121;
  padding: 20rpx 0;
  display: -webkit-box;
  position: relative;
}
.top-bar-c{
  -webkit-box-flex: 1;
    margin: 0 16rpx;
}
.s-input-select{
  display: -webkit-box;
  height: 70rpx;
  line-height: 70rpx;
  background: #fff;
  border-radius: 16rpx;
}
.s-input-select{
  -webkit-box-flex: 1;
  padding-right: 10px;
  line-height: 36px;
}
.s-input-frame .c-form-btn {
    width: 60rpx;
    height: 70rpx;
    margin: 0 10rpx 0 20rpx;
    float:left;
}
.s-form-search{
  float: left;
  height:70rpx;
  line-height:70rpx;
}
.s-input-frame .s-form-search .J_autocomplete {
    border: none;
    background: none;
    width: 100%;
    height: 100%;
    outline: none;
    font-size: 14px;
    line-height: 70rpx;
    padding: 0;
}
.top-bar-btn{
    height: 70rpx;
    line-height: 70rpx;
    padding: 0 20rpx;
    font-size: 30rpx;
    color:#333;
    margin-left:100rpx;
}
.hotkey{
  overflow: hidden;
  margin-left:40rpx;
}
.suggest-hotkey{
  overflow: hidden;
}
.title{
    overflow: hidden;
    font-size: 30rpx;
    color: #8f9db1;
    padding-left: 50rpx;
    margin-bottom: 40rpx;
    background: #fff;
    margin: 0 0 50rpx 0;
    font-weight: 600;
}
.suggest-container .suggest-hotkey view{
    border: 1px solid #dedede;
    height: 60rpx;
    line-height: 60rpx;
    padding: 4rpx 34rpx;
    border-radius: 20px;
    min-width: 60px;
    text-align: center;
    display: block;
    float: left;
    margin: 8px 5px 12px;
    font-size: 15px;
    color: #000;
}